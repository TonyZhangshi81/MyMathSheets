<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="Operation" type="MyMathSheets.CommonLib.Provider.OperationProviderConfigurationSection, MyMathSheets.CommonLib" />
	</configSections>
	<Operation type="json" argument="..\Config\{0}.json"></Operation>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
	</startup>
	<appSettings>
		<!-- HTML模板所在路徑 -->
		<add key="Template" value="..\HtmlTemplate\HTMLPage" />
		<!-- 題型試卷存放路徑 -->
		<add key="HtmlWork" value="..\App_Data\Work\Page\" />
		<!-- 瀏覽器指定 -->
		<add key="Preview" value="chrome.exe" />
		<!-- 題型參數配置管理 -->
		<add key="TopicManagement" value="..\Config\TopicManagement.json"/>
	</appSettings>
</configuration>