<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <log4net>

    <!-- 控制台輸出設置附加介質 -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger %ndc - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
      </filter>
    </appender>

    <!-- 操作日誌文件輸出設置附加介質 -->
    <appender name="TraceFileLog" type="log4net.Appender.RollingFileAppender, log4net">
      <param name="LockingModel" type="log4net.Appender.FileAppender+MinimalLock" />
      <param name="File" value="logs/" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="'I'yyyyMMdd.'log'" />
      <param name="AppendToFile" value="true" />
      <param name="MaxSizeRollBackups" value="10" />
      <param name="MaximumFileSize" value="2MB" />
      <param name="RollingStyle" value="Date" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="WARN" />
      </filter>
    </appender>

    <!-- 錯誤日誌文件輸出設置附加介質 -->
    <appender name="ErrorFileLog" type="log4net.Appender.RollingFileAppender, log4net">
      <param name="LockingModel" type="log4net.Appender.FileAppender+MinimalLock" />
      <param name="File" value="logs/" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="'E'yyyyMMdd.'log'" />
      <param name="AppendToFile" value="true" />
      <param name="MaxSizeRollBackups" value="10" />
      <param name="MaximumFileSize" value="2MB" />
      <param name="RollingStyle" value="Date" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
    </appender>

    <!-- OFF > FATAL > ERROR > WARN > INFO > DEBUG  > ALL  -->
    
    <logger name="MyMathSheets.CommonLib.*">
      <appender-ref ref="TraceFileLog" />
      <appender-ref ref="ErrorFileLog" />
    </logger>
    
    <logger name="loginfo">
      <appender-ref ref="TraceFileLog" />
    </logger>
    
  </log4net>
</configuration>