	<script>
		$(document).ready(function () {
			$('#btnTheirPapers').click(function () { btnTheirPapersClick(); });
		});

		function btnTheirPapersClick() {
			$("input[id*='input']").each(function (index, element) {
				if ($(element).val() != $('#hidden' + index).val()) {
					$('#imgOK' + index).hide();
					$('#imgNo' + index).show();
				} else {
					$('#imgOK' + index).show();
					$('#imgNo' + index).hide();
				}
			});
		}
	</script>
